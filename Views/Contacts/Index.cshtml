            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>Managers</tr>
        @foreach (var item in managers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
