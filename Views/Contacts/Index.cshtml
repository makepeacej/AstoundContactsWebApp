@model IEnumerable<AstoundContactsWebApp.Models.Contact>
@using AstoundContactsWebApp.Models
@{
    ViewData["Title"] = "Index";
    var managers = Model.Where(m => m.JobCategory == Jobs.Manager).ToList();
    var InstallOrService = Model.Where(m => m.JobCategory == Jobs.InstallOrService).ToList();
    var NetworkTech = Model.Where(m => m.JobCategory == Jobs.NetworkTech).ToList();
    var Sales = Model.Where(m => m.JobCategory == Jobs.Sales).ToList();
    var Office = Model.Where(m => m.JobCategory == Jobs.Office).ToList();
    var Misc = Model.Where(m => m.JobCategory == Jobs.Misc).ToList();
}



<p>
    <a asp-action="Create"><input class="btn btn-primary btn-sm" value="Create New" style="padding-bottom: 0px;padding-left: 0px;border-left-width: 1px;padding-right: 0px;padding-top: 0px;width: 100px;height: 25px;" /></a>
</p>


<h4>Managers</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TechNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in managers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TechNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><input class="btn btn-primary" value="Edit" style="padding-bottom: 0px;padding-left: 0px;border-left-width: 1px;padding-right: 0px;padding-top: 0px;width: 100px;height: 25px;" /></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><input class="btn btn-primary" value="Details" style="padding-bottom: 0px;padding-left: 0px;border-left-width: 1px;padding-right: 0px;padding-top: 0px;width: 100px;height: 25px;" /></a>
